@model DemoOCR.Models.FormField

@{
    ViewData["Title"] = "Create Form Field";
}

<h2>Create Form Field</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FormId"></label>
        <select asp-for="FormId" class="form-control">
            <option value="">-- Select Form --</option>
            @foreach (var form in ViewBag.Forms as List<DemoOCR.Models.Form>)
            {
                <option value="@form.Id">@form.Title</option>
            }
        </select>
        <span asp-validation-for="FormId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FieldName"></label>
        <input asp-for="FieldName" class="form-control" />
        <span asp-validation-for="FieldName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FieldType"></label>
        <select asp-for="FieldType" class="form-control">
            <option value="TextBox">TextBox</option>
            <option value="Dropdown">Dropdown</option>
            <option value="Checkbox">Checkbox</option>
        </select>
        <span asp-validation-for="FieldType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Label"></label>
        <input asp-for="Label" class="form-control" />
        <span asp-validation-for="Label" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsRequired" class="form-check-input" type="checkbox" />
        <label asp-for="IsRequired" class="form-check-label">Is Required</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
