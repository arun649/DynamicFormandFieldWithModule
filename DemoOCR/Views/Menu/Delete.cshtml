@model DemoOCR.Models.Menu

@{
    ViewData["Title"] = "Delete Menu";
}

<h2>Delete Menu</h2>

<div>
    <h3>Are you sure you want to delete this menu?</h3>
    <div>
        <h4>@Model.Title</h4>
        <p>
            <strong>Action:</strong> @Model.ActionName <br />
            <strong>Controller:</strong> @Model.ControllerName <br />
            <strong>Role:</strong> @Model.Role
        </p>
    </div>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
